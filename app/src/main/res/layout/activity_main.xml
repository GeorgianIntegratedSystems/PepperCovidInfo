<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#F0F0F0"
    android:foregroundGravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="15sp"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <include
            android:id="@+id/big_card"
            layout="@layout/face_layout_big"
            android:layout_width="250sp"
            android:layout_height="305sp">

        </include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <include
                android:id="@+id/little_card_1"
                layout="@layout/face_layout_small"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <include
                android:id="@+id/little_card_2"
                layout="@layout/face_layout_small"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <include
                android:id="@+id/little_card_3"
                layout="@layout/face_layout_small"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <include
                android:id="@+id/little_card_4"
                layout="@layout/face_layout_small"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>